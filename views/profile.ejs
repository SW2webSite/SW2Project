<%- include('header') -%>
<link rel="stylesheet" href="/css/bootstrap.css">
<link rel="stylesheet" href="/css/home-header.css">
<body style="background-image: url('image/profileBack.jpg');  background-repeat: no-repeat;  background-attachment: fixed;  background-size: 100% 100%;">
  <%- include('nav')  -%>

  <div class="container bootstrap snippet">
    <div class="row">
      <div class="col-sm-10">
        <h1><%= user.username %></h1>
      </div>
    </div>
    <div class="row">

      <div class="col-sm-3">
        <!--left col-->
        <div class="text-center">
          <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
        </div><br>
      </div>
      <!--/col-3-->

      <div class="col-sm-9">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#home">Home</a></li>
          <li><a data-toggle="tab" href="#messages">Edit</a></li>

        </ul>

        <div class="tab-content">

          <div class="tab-pane active" id="home">
            <form class="form" action="##" method="post" id="registrationForm">
              <div class="form-group">
                <div class="col-xs-8">
                  <label for="first_name">
                    <h4>Username</h4>
                  </label>
                  <p><%= user.username %></p>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-8">
                  <label for="last_name">
                    <h4>Role</h4>
                  </label>
                  <p><%= user.role %></p>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-8">
                  <label for="email">
                    <h4>Email</h4>
                  </label>
                  <p> <%= user.email %></p>
                </div>
              </div>
            </form>
          </div>
          <!--/tab-pane-->

          <div class="tab-pane" id="messages">
            <form class="form" action="/edit-profile" method="post" id="registrationForm">
              <div class="form-group">
                <div class="col-xs-6">
                  <label for="first_name">
                    <h4>First name</h4>
                  </label>
                  <input type="text" class="form-control" name="firstname" id="first_name" placeholder="first name" value="<%= user.firstname %>">
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-6">
                  <label for="last_name">
                    <h4>Last name</h4>
                  </label>
                  <input type="text" class="form-control" name="last_name" id="last_name" placeholder="last name" value="<%= user.lastname %>">
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-6">
                  <label for="email">
                    <h4>Email</h4>
                  </label>
                  <input type="email" class="form-control" name="email" id="email" placeholder="you@email.com" value="<%= user.email %>">
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-12">
                  <br>
                  <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                </div>
              </div>
            </form>
          </div>

          <!--/tab-pane-->

          <div class="tab-pane" id="settings">
            <form class="" action="/" method="post">
              <button type="submit" name="add" class="btn-a btn-sm btn-outline-secondary"><img src="image/plus.jpg" style="width:150px;height:150px;border:0; border-radius: 50%;"></button>
            </form>
          </div>
          <!--/tab-pane-->

        </div>
        <!--/tab-content-->
      </div>
      <!--/col-9-->
    </div>
    <!--/row-->
  </div>
  <script src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js'></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <%- include('footer')  -%>
